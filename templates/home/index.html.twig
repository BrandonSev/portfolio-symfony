{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Accueil{% endblock %}

{% set heroInfo = {
 title: "Je suis <br> <span> Brandon Seveste</span>",
 description: "Actuellement en formation développeur web et Mobile, je maîtrise le Html / css / Javascript , ainsi que l’utilisation de la librairie React.",
 linkText: "Voir mes réalisations"
} %}

{% block body %}
 {% include('/partials/hero.html.twig') with heroInfo %}
 <section class="skills" id="skills">
  <div class="container">
   <h2 class="active">Mes compétences</h2>
   <div class="skills_wrapper">
    {% for category in categories %}
     <div class="skills_frontend">
      <span class="skills_badge">{{ category.title }}</span>
      {% for underCategory in category.underCategories %}
      <div class="skills_frontend__language">
       <p>{{ underCategory.title }}</p>
       <ul>
        {% for technology in underCategory.technologies %}
        <li>
         <img
                 src=""
                 alt=""
         />
         {{ technology.title }}
        </li>
        {% endfor %}
       </ul>
      </div>
      {% endfor %}
     </div>
    {% endfor %}
   </div>
  </div>
 </section>

{% endblock %}
